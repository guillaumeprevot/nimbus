<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.techgp.nimbus</groupId>
	<artifactId>nimbus-app</artifactId>
	<packaging>jar</packaging>
	<version>0.2</version>
	<name>Nimbus</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<!--
			2.7.2
			http://sparkjava.com/download
			https://mvnrepository.com/artifact/com.sparkjava/spark-core
		-->
		<dependency>
			<groupId>com.sparkjava</groupId>
			<artifactId>spark-core</artifactId>
			<version>RELEASE</version>
		</dependency>
		<!--
			2.7.1
			https://github.com/perwendel/spark-template-engines/tree/master/spark-template-freemarker
			https://mvnrepository.com/artifact/com.sparkjava/spark-template-freemarker
		-->
		<dependency>
			<groupId>com.sparkjava</groupId>
			<artifactId>spark-template-freemarker</artifactId>
			<version>RELEASE</version>
		</dependency>
		<!--
			2.3.28 car "spark-template-freemarker" remonte une version "2.3.26-incubating"
			https://freemarker.apache.org/
			https://mvnrepository.com/artifact/org.freemarker/freemarker
		-->
		<dependency>
			<groupId>org.freemarker</groupId>
			<artifactId>freemarker</artifactId>
			<version>RELEASE</version>
		</dependency>
		<!--
			2.8.5
			https://github.com/google/gson
			https://www.mvnrepository.com/artifact/com.google.code.gson/gson
		-->
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>RELEASE</version>
		</dependency>
		<!--
			1.7.25 car 1.8 en béta
			http://www.slf4j.org/api/org/slf4j/impl/SimpleLogger.html
			https://www.mvnrepository.com/artifact/org.slf4j/slf4j-api
		-->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.25</version>
		</dependency>
		<!--
			1.7.25 car 1.8 en béta
			http://www.slf4j.org/api/org/slf4j/impl/SimpleLogger.html
			https://www.mvnrepository.com/artifact/org.slf4j/slf4j-simple
		-->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>1.7.25</version>
		</dependency>
		<!--
			3.7.1 car 3.8.0 en béta
			https://mongodb.github.io/mongo-java-driver/
			https://www.mvnrepository.com/artifact/org.mongodb/mongodb-driver
		-->
		<dependency>
			<groupId>org.mongodb</groupId>
			<artifactId>mongodb-driver</artifactId>
			<version>3.7.1</version>
		</dependency>
		<!--
			5.5.13
			http://developers.itextpdf.com/itext-java
			https://www.mvnrepository.com/artifact/com.itextpdf/itextpdf
		-->
		<dependency>
			<groupId>com.itextpdf</groupId>
			<artifactId>itextpdf</artifactId>
			<version>RELEASE</version>
		</dependency>
		<!--
			2.11.0
			https://github.com/drewnoakes/metadata-extractor/releases
			https://www.mvnrepository.com/artifact/com.drewnoakes/metadata-extractor
		-->
		<dependency>
			<groupId>com.drewnoakes</groupId>
			<artifactId>metadata-extractor</artifactId>
			<version>RELEASE</version>
		</dependency>
		<!--
			2.6
			https://commons.apache.org/proper/commons-io/
			https://www.mvnrepository.com/artifact/commons-io/commons-io
		-->
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>RELEASE</version>
		</dependency>
		<!--
		<dependency>
			<groupId>org.jclarion</groupId>
			<artifactId>image4j</artifactId>
			<version>0.7</version>0.7.1 dispo mais pas par Maven
		</dependency>
		-->
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>get-jars</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<includeScope>runtime</includeScope>
							<outputDirectory>lib</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>generate-dep-tree</id>
						<phase>compile</phase>
						<goals>
							<goal>tree</goal>
						</goals>
						<configuration>
							<outputFile>./pom.tree.txt</outputFile>
							<outputType>txt</outputType>
							<verbose>true</verbose>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
